{
  "name": "mafclubscore",
  "version": "2.8.1",
  "description": "МАФ-Клуб Рейтинговая Система",
  "type": "module",
  "scripts": {
    "dev": "echo 'Use: vercel dev --listen 3000'",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:integration": "NODE_OPTIONS=--experimental-vm-modules jest tests/integration",
    "test:load": "k6 run tests/load/k6-load-test.js",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:critical": "playwright test --grep @critical",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm test && npm run test:e2e:critical",
    "prepare": "husky"
  },
  "keywords": [
    "mafia",
    "rating",
    "vercel",
    "turso"
  ],
  "author": "МАФ-Клуб SHOWTIME",
  "license": "MIT",
  "dependencies": {
    "@libsql/client": "^0.14.0",
    "bcryptjs": "^3.0.3",
    "jsonwebtoken": "^9.0.2",
    "zod": "^4.1.12"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@playwright/test": "^1.56.1",
    "@sentry/browser": "^10.25.0",
    "@testing-library/dom": "^10.4.1",
    "dotenv": "^17.2.3",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.6"
  },
  "lint-staged": {
    "*.js": [
      "node --check"
    ],
    "*.{js,json,md}": [
      "echo 'Checking file:'"
    ]
  }
}
